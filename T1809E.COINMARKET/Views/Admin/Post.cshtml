    <div class="row">

        <div class="col-md-12">
            <!-- BEGIN PORTLET-->


            <div class="row">
                <div class="col-md-12">
                    <!-- BEGIN EXAMPLE TABLE PORTLET-->
                    <div class="portlet light bordered">
                        <div class="portlet-title">
                            <div class="caption font-dark">
                                <i class="icon-settings font-dark"></i>
                                <span class="caption-subject bold uppercase"> Post Table</span>
                            </div>
                        </div>
                        <div class="portlet-body">
                            <div class="table-toolbar">
                                <div class="row">
                                    <div class="col-md-6">
                                        <div class="btn-group">
                                            <a id="" href="/Admin/AddPost" class="btn sbold green">
                                                Add New
                                                <i class="fa fa-plus"></i>
                                            </a>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <table class="table table-striped table-bordered table-hover table-checkable order-column" id="sample_1">
                                <thead>
                                    <tr>
                                        <th> Title </th>
                                        <th> Content </th>
                                        <th> Rank </th>
                                        <th> Status </th>
                                        <th> Created Date </th>
                                        <th> Actions </th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var post in Model)
                                    {
                                        <tr class="odd gradeX">
                                            <td style="font-weight: bold;"> @post.Title </td>
                                            <td>
                                                @post.Content
                                            </td>
                                            <td>
                                                <span class="label label-sm label-success"> @post.Rank.Name </span>
                                            </td>
                                            <td>
                                                @if (@post.Status.Equals(PostStatus.ACTIVE))
                                                {
                                                    <span class="label label-sm label-success"> @post.Status </span>
                                                }
                                                else if (@post.Status.Equals(PostStatus.DISABLE))
                                                {
                                                    <span class="label label-sm label-warning"> @post.Status </span>
                                                }
                                                else
                                                {
                                                    <span class="label label-sm label-danger"> @post.Status </span>
                                                }
                                            </td>
                                            <td class="center"> @post.CreatedAt </td>
                                            <td>
                                                <div class="btn-group">
                                                    <button class="btn btn-xs green dropdown-toggle" type="button" data-toggle="dropdown" aria-expanded="false">
                                                        Actions
                                                        <i class="fa fa-angle-down"></i>
                                                    </button>
                                                    <ul class="dropdown-menu pull-left" role="menu">
                                                        
                                                        @if (post.Status.Equals(PostStatus.DELETED))
                                                        {
                                                            <li class="disabled">
                                                                <a href="/Admin/Delete?id=@post.Id">
                                                                    <i class="icon-star"></i> Delete
                                                                </a>
                                                            </li>
                                                            <li>
                                                                <a href="/Admin/EditPost?id=@post.Id">
                                                                    <i class="icon-diamond"></i> Edit
                                                                </a>
                                                            </li>
                                                        }
                                                        else
                                                        {
                                                            
                                                            <li>
                                                                <a href="/Admin/Delete?id=@post.Id">
                                                                    <i class="icon-star"></i> Delete
                                                                </a>
                                                            </li>
                                                            <li>
                                                                <a href="/Admin/EditPost?id=@post.Id">
                                                                    <i class="icon-diamond"></i> Edit
                                                                </a>
                                                            </li>
                                                        }
                                                    </ul>
                                                </div>
                                            </td>
                                        </tr>
                                    }

                                </tbody>
                            </table>
                        </div>
                    </div>
                    <!-- END EXAMPLE TABLE PORTLET-->
                </div>
            </div>

            <!-- END PORTLET-->
        </div>
    </div>
